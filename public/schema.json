{
  "$ref": "#/definitions/mySchema",
  "definitions": {
    "mySchema": {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string",
          "const": "https://cryptichuntjson.sankalpmukim.dev/schema.json"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "phase": {
          "type": "number",
          "minimum": 1,
          "maximum": 10
        },
        "isQR": {
          "type": "boolean"
        },
        "question": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "answer": {
              "type": "string"
            },
            "pointsAwarded": {
              "type": "number"
            },
            "costofHint": {
              "type": "number"
            },
            "hint": {
              "type": "string"
            }
          },
          "required": [
            "title",
            "description",
            "answer",
            "pointsAwarded",
            "costofHint",
            "hint"
          ],
          "additionalProperties": false
        }
      },
      "required": ["name", "description", "phase", "isQR", "question"],
      "additionalProperties": false,
      "description": "My neat question schema"
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
